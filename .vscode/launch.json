    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}\\services\\ontobridgeApi"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}\\services\\ontobridgeApi",
            "justMyCode": true
        }
    ]
}